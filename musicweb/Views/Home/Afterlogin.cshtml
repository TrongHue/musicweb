<script type="text/javascript">
        var listsong = new Array();
        $('document').ready(function () {

            $.getJSON('/api/song', {cout:4} ,function (data) {

                $(data).each(function (key, value) {




                    $('.tablenewsingle').append('<td><a style="text-decoration:none;" data-source="' + value.songSource + '" class="data" href=\"\"><img src="' + value.songPicture + '"  height="200px" width="240" alt="anh"  /> <p align="center">' + value.songName + '</p></a></td>');

                });

            });


            $('body').on('click', '.data', function (e) {
                e.preventDefault();

                var source = $(this).data('source');
                $.ajax(
                    {
                        method: 'GET',
                        url: '@Url.Action("GetSource", "Home")',
                        data: { source: source },
                        type:'json',
                        success: function (response)
                        {
                            window.location.href ='/Home/Play';
                        }
                    });
            });
        });
</script>
